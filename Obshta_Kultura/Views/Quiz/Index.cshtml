@{
    ViewData["Title"] = "Избери трудност и категории";
}

@model List<CategoryModel>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <!-- Начален екран за избор -->
            <div class="card shadow-lg" id="setupCard">
                <div class="card-header bg-primary text-white py-3">
                    <h2 class="text-center mb-0">Избери трудност и категории</h2>
                </div>
                <div class="card-body p-4">
                    <!-- Избор на трудност -->
                    <div class="difficulty-section mb-4">
                        <h4 class="text-center mb-4">Изберете ниво на трудност</h4>
                        <div class="d-flex flex-column align-items-center gap-3">
                            <div class="difficulty-option">
                                <input class="form-check-input difficulty-radio" type="radio" 
                                       name="difficulty" id="Лесно" value="Лесно" checked>
                                <label class="form-check-label" for="Лесно">
                                    <span class="fs-5">Лесно</span>
                                    <small class="d-block text-muted">2 опции за отговор</small>
                                </label>
                            </div>
                            <div class="difficulty-option">
                                <input class="form-check-input difficulty-radio" type="radio" 
                                       name="difficulty" id="Средно" value="Средно">
                                <label class="form-check-label" for="Средно">
                                    <span class="fs-5">Средно</span>
                                    <small class="d-block text-muted">4 опции за отговор</small>
                                </label>
                            </div>
                            <div class="difficulty-option">
                                <input class="form-check-input difficulty-radio" type="radio" 
                                       name="difficulty" id="Трудно" value="Трудно">
                                <label class="form-check-label" for="Трудно">
                                    <span class="fs-5">Трудно</span>
                                    <small class="d-block text-muted">Въвеждане на отговор</small>
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- Избор на категории -->
                    <div class="categories-section">
                        <h4 class="text-center mb-4">Изберете категории</h4>
                        <div class="d-flex align-items-center justify-content-center mb-4">
                            <div class="form-check form-switch">
                                <input type="checkbox" id="selectAll" class="form-check-input me-2" style="transform: scale(1.2);">
                                <label for="selectAll" class="form-check-label fs-5">Избери всички категории</label>
                            </div>
                        </div>
                        <div class="categories-list row row-cols-1 row-cols-md-2 g-4 mb-4">
                            @foreach (var category in Model)
                            {
                                <div class="col">
                                    <div class="category-item" data-category="@category.Name">
                                        <div class="category-content">
                                            @category.Name
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <button id="startQuiz" class="btn btn-primary btn-lg w-100 mt-3">
                        <i class="fas fa-play me-2"></i>Започни тест
                    </button>
                </div>
            </div>

            <!-- Секция с въпроси -->
            <div id="quizSection" class="mt-4" style="display: none;">
                <div class="card shadow-lg">
                    <div class="card-header bg-primary text-white py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="badge bg-light text-primary" id="difficultyBadge"></span>
                            <h3 class="text-center mb-0" id="questionCategory"></h3>
                            <span class="badge bg-light text-primary" id="questionCounter">Въпрос 1</span>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <div class="question-content">
                            <h3 id="questionText" class="text-center mb-4"></h3>
                            <div id="optionsContainer" class="d-flex flex-column align-items-center gap-3"></div>
                            <div id="textAnswerContainer" class="text-answer-container" style="display: none;">
                                <input type="text" id="textAnswer" class="form-control form-control-lg" placeholder="Въведете вашия отговор...">
                                <button id="submitAnswer" class="btn btn-primary btn-lg w-100 mt-3">
                                    <i class="fas fa-check me-2"></i>Провери отговора
                                </button>
                            </div>
                        </div>
                        
                        <div id="result" class="mt-4" style="display: none;">
                            <div class="alert p-3 text-center fs-5" role="alert"></div>
                            <div id="explanation" class="mt-3 p-3 bg-light rounded text-center"></div>
                        </div>
                        <button id="nextQuestion" class="btn btn-primary btn-lg w-100 mt-4" style="display: none;">
                            <i class="fas fa-arrow-right me-2"></i>Следващ въпрос
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-code.js" crossorigin="anonymous"></script>
    <script>
        let currentQuestion = null;
        let questionCount = 0;

        $(document).ready(function() {
            // Управление на категориите
            $('.category-item').click(function() {
                $(this).toggleClass('selected');
                updateSelectAll();
            });

            // Управление на трудността
            $('.difficulty-option').click(function() {
                $('.difficulty-option').removeClass('selected');
                $(this).addClass('selected');
                $(this).find('input').prop('checked', true).trigger('change');
            });

            // Управление на "Избери всички" чекбокс
            $('#selectAll').change(function() {
                if ($(this).is(':checked')) {
                    $('.category-item').addClass('selected');
                } else {
                    $('.category-item').removeClass('selected');
                }
            });

            function updateSelectAll() {
                let allSelected = $('.category-item.selected').length === $('.category-item').length;
                $('#selectAll').prop('checked', allSelected);
            }

            // Започване на теста
            $('#startQuiz').click(function() {
                let selectedCategories = $('.category-item.selected').map(function() {
                    return $(this).data('category');
                }).get();

                let selectedDifficulty = $('input[name="difficulty"]:checked').val();
                questionCount = 0;

                if (selectedCategories.length === 0) {
                    alert('Моля, изберете поне една категория!');
                    return;
                }

                $.ajax({
                    url: '/Quiz/SetCategories',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({
                        categories: selectedCategories,
                        difficulty: selectedDifficulty
                    }),
                    success: function() {
                        $('#setupCard').hide();
                        $('#quizSection').show();
                        $('#difficultyBadge').text(selectedDifficulty);
                        loadQuestion();
                    }
                });
            });

            // Зареждане на въпрос
            function loadQuestion() {
                $.get('/Quiz/GetQuestion', function(data) {
                    if (data.error) {
                        alert(data.error);
                        return;
                    }

                    questionCount++;
                    currentQuestion = data;
                    $('#questionCategory').text(data.category);
                    $('#questionText').text(data.text);
                    $('#questionCounter').text('Въпрос ' + questionCount);
                    
                    // Показване на подходящия интерфейс според трудността
                    if (data.difficulty === "Трудно") {
                        $('#optionsContainer').hide();
                        $('#textAnswerContainer').show();
                        $('#textAnswer').val('').focus();
                    } else {
                        $('#textAnswerContainer').hide();
                        $('#optionsContainer').show();
                        
                        let optionsHtml = '';
                        data.options.forEach((option, index) => {
                            optionsHtml += `
                                <div class="difficulty-option answer-option" data-index="${index}">
                                    <div class="option-content">
                                        ${option}
                                    </div>
                                </div>`;
                        });
                        
                        $('#optionsContainer').html(optionsHtml);
                    }
                    
                    $('#result').hide();
                    $('#nextQuestion').hide();
                });
            }

            // Проверка на отговор (за лесно и средно ниво)
            $('#optionsContainer').on('click', '.answer-option', function() {
                if (!currentQuestion) return;
                
                let selectedIndex = $(this).data('index');
                checkAnswer(currentQuestion.options[selectedIndex]);
            });

            // Проверка на текстов отговор (за трудно ниво)
            $('#submitAnswer').click(function() {
                if (!currentQuestion) return;
                
                let textAnswer = $('#textAnswer').val().trim();
                if (!textAnswer) {
                    alert('Моля, въведете отговор!');
                    return;
                }
                
                checkAnswer(textAnswer);
            });

            // Обща функция за проверка на отговор
            function checkAnswer(answer) {
                $('.answer-option').css('pointer-events', 'none');
                $('#submitAnswer').prop('disabled', true);
                
                $.ajax({
                    url: '/Quiz/CheckAnswer',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({
                        questionId: currentQuestion.id,
                        answer: answer
                    }),
                    success: function(response) {
                        let resultDiv = $('#result');
                        let alertDiv = resultDiv.find('.alert');
                        
                        if (currentQuestion.difficulty !== "Трудно") {
                            // Оцветяване на бутоните за лесно и средно ниво
                            $('.answer-option').each(function() {
                                let btnIndex = $(this).data('index');
                                let optionText = currentQuestion.options[btnIndex];
                                if (optionText === response.correctAnswer) {
                                    $(this).addClass('correct-answer');
                                } else if (optionText === answer && !response.isCorrect) {
                                    $(this).addClass('wrong-answer');
                                }
                            });
                        }
                        
                        if (response.isCorrect) {
                            alertDiv.removeClass('alert-danger').addClass('alert-success')
                                .html('<i class="fas fa-check-circle me-2"></i>Правилен отговор!');
                        } else {
                            alertDiv.removeClass('alert-success').addClass('alert-danger')
                                .html('<i class="fas fa-times-circle me-2"></i>Грешен отговор!<br>' +
                                     `<small class="d-block mt-2">Правилният отговор е: ${response.correctAnswer}</small>`);
                        }
                        
                        $('#explanation').text(response.explanation);
                        resultDiv.show();
                        $('#nextQuestion').show();
                    }
                });
            }

            // Следващ въпрос
            $('#nextQuestion').click(function() {
                loadQuestion();
            });

            // Добавяме event listener за Enter бутона при текстови въпроси
            document.getElementById('textAnswer')?.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    const questionId = currentQuestion?.id;
                    if (questionId) {
                        checkAnswer(this.value);
                    }
                }
            });
        });
    </script>

    <style>
        .category-item {
            padding: 15px;
            border-radius: 8px;
            cursor: pointer;
            user-select: none;
            margin-bottom: 5px;
            border: 2px solid transparent;
            transition: all 0.2s ease;
            background-color: #f8f9fa;
        }

        .category-item:hover {
            background-color: #e9ecef;
        }

        .category-item.selected {
            border-color: #0d6efd;
            background-color: #e7f1ff;
        }

        .category-content {
            text-align: center;
            font-size: 1.1rem;
            font-weight: 500;
        }

        .difficulty-option {
            padding: 1rem;
            border-radius: 8px;
            transition: all 0.3s ease;
            width: 100%;
            max-width: 300px;
            text-align: center;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f8f9fa;
            border: 2px solid transparent;
        }

        .difficulty-option:hover {
            background-color: #e9ecef;
        }

        .difficulty-option.selected {
            border-color: #0d6efd;
            background-color: #e7f1ff;
        }

        .difficulty-option label {
            cursor: pointer;
            margin: 0;
        }

        .difficulty-radio {
            display: none;
        }

        .custom-checkbox {
            padding: 10px;
            border-radius: 8px;
            cursor: pointer;
            user-select: none;
            margin-bottom: 5px;
            display: flex;
            align-items: center;
        }

        .custom-checkbox:hover {
            background-color: #e9ecef;
        }

        .custom-checkbox input[type="checkbox"] {
            margin-right: 10px;
            cursor: pointer;
        }

        .custom-checkbox label {
            cursor: pointer;
            margin: 0;
            flex: 1;
        }

        .form-check-input {
            cursor: pointer;
        }

        .answer-option {
            width: 100%;
            max-width: 500px;
            padding: 1rem;
            border-radius: 8px;
            transition: all 0.3s ease;
            text-align: center;
            cursor: pointer;
            background-color: #f8f9fa;
            border: 2px solid transparent;
        }

        .answer-option:hover {
            background-color: #e9ecef;
        }

        .answer-option.correct-answer {
            border-color: #198754;
            background-color: #d1e7dd;
        }

        .answer-option.wrong-answer {
            border-color: #dc3545;
            background-color: #f8d7da;
        }

        .option-content {
            font-size: 1.1rem;
            font-weight: 500;
        }

        .card {
            border: none;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            border-bottom: none;
        }

        #explanation {
            font-style: italic;
            color: #666;
        }

        .badge {
            font-size: 1rem;
            padding: 0.5rem 1rem;
        }

        #textAnswer {
            font-size: 1.2rem;
            padding: 1rem;
        }
    </style>
} 